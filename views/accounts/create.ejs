<%- include('../partials/head.ejs') %>

    <body>

        <%- include('../partials/nav.ejs') %>

            <div class="create-blog content">

                <!-- "action" = Where we want to send this request too, in this case it is to the /accounts url -->
                <form action="/accounts" method="POST">

                    <label for="title">First Name:</label>
                    <input type="text" id="title" name="firstName" required>

                    <label for="title1">Last Name:</label>
                    <input type="text" id="title1" name="lastName" required>

                    <label for="sex">Gender:</label>
                    <input type="text" id="sex" name="sex" required>

                    <label for="sport">Sport:</label>
                    <input type="text" id="sport" name="sport" required>

                    <label for="age">Age:</label>
                    <input type="number" id="age" name="age" required>

                    <button>Submit</button>

                </form>
            </div>

